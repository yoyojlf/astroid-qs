<?xml version="1.0" encoding="UTF-8"?>
<fieldsgroup> 
   <field
      type="alert"
      label="warning"
      group="styling"
      description="JDB_ELEMENT_TYPOGRAPHY_ALERT"
   >   
   </field>
   <field type="font-family" name="fontFace" label="JDB_FONT_FAMILY_LABEL" default="" description="JDB_FONT_FAMILY_DESC">
   </field>
   <field type="radio" name="fontSize" label="JDB_FONT_SIZE_LABEL" default="" description="JDB_FONT_SIZE_DESC" radiotype="buttons">
      <option value="">JDB_DEFAULT</option>
      <option value="custom">JDB_CUSTOM</option>
   </field>
   <field type="slider" name="customFontSize" label="JDB_BLANK_LABEL" description="" default='{"value":24,"unit":"px"}' units="px,%,em" showon="params._fgFontSize=='custom'">
   </field>
   
   <field type="list" name="fontWeight" label="JDB_FONT_WEIGHT_LABEL" default="" description="JDB_FONT_WEIGHT_DESC" width="6">
      <option value="">JDB_DEFAULT</option>
      <option value="lighter">Lighter</option>
      <option value="normal">Normal</option>
      <option value="bold">Bold</option>
      <option value="bolder">Bolder</option>
      <option value="100">100</option>
      <option value="200">200</option>
      <option value="300">300</option>
      <option value="400">400</option>
      <option value="500">500</option>
      <option value="600">600</option>
      <option value="700">700</option>
      <option value="800">800</option>
      <option value="900">900</option>
   </field>
   
   <field type="list" name="textTransform" label="JDB_TEXT_TRANSFORM_DESC" default="" description="JDB_TEXT_TRANSFORM_DESC" width="6">
      <option value="">JDB_DEFAULT</option>
      <option value="none">None</option>
      <option value="capitalize">Capitalize</option>
      <option value="uppercase">UPPERCASE</option>
      <option value="lowercase">lowercase</option>
   </field>
   
   <field type="list" name="fontStyle" label="JDB_FONT_STYLE_LABEL" default="" description="JDB_FONT_STYLE_DESC" width="6">
      <option value="">JDB_DEFAULT</option>
      <option value="normal">Normal</option>
      <option value="italic">Italic</option>
      <option value="oblique">Oblique</option>
   </field>
   
   <field type="list" name="textDecoration" label="JDB_TET_DECORATION_LABEL" default="" description="JDB_TEXT_DECORATION_DESC" width="6">
      <option value="">JDB_DEFAULT</option>
      <option value="none">None</option>
      <option value="underline">Underline</option>
      <option value="overline">Overline</option>
      <option value="line-through">Line-Through</option>
   </field>
   
   <field type="radio" name="lineHeight" label="JDB_LINE_HEIGHT_LABEL" default="" description="JDB_LINE_HEIGHT_DESC" radiotype="buttons">
      <option value="">JDB_DEFAULT</option>
      <option value="custom">JDB_CUSTOM</option>
   </field>
   
   <field type="slider" name="customLineHeight" label="JDB_BLANK_LABEL" description="" default='{"value":1,"unit":"em"}' units="px,em" showon="params._fgLineHeight=='custom'">
   </field>
   
   <field type="radio" name="letterSpacing" label="JDB_LETTER_SPACING_LABEL" default="" description="JDB_LETTER_SPACING_DESC" radiotype="buttons">
      <option value="">JDB_DEFAULT</option>
      <option value="custom">JDB_CUSTOM</option>
   </field>
   
   <field type="slider" name="customLetterSpacing" label="JDB_BLANK_LABEL" description="" default='{"value":1,"unit":"em"}' units="px,em" showon="params._fgLetterSpacing=='custom'">
   </field>
</fieldsgroup>